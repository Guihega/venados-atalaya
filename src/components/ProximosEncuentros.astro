---
/**
 * ⚽ Próximos Encuentros — Venados Atalaya
 * Versión estable y funcional (sin dependencias externas)
 * - Muestra los próximos 3 eventos futuros
 * - Filtrado y orden por fecha
 * - Diseño coherente con el sitio Venados
 */

const eventos = [
  {
    id: "copa-sur",
    date: "2025-12-15",
    title: "Copa Regional del Sur",
    venue: "Estadio Tehuacán",
    time: "18:00",
    home: "Venados Atalaya",
    away: "Lobos del Sur",
    score: "3–1",
    cover: "/img/eventos/copa-sur.webp",
    note: "Gran encuentro clasificatorio con dominio táctico de Venados Atalaya."
  },
  {
    id: "liga-estatal",
    date: "2025-11-17",
    title: "Liga Estatal 2025",
    venue: "Huixcolotla, Puebla",
    time: "17:30",
    home: "Venados Atalaya",
    away: "Atlético Centro",
    score: "",
    cover: "/img/eventos/liga-estatal.webp",
    note: "Partido de preparación con rotación táctica."
  },
  {
    id: "torneo-nacional",
    date: "2025-12-20",
    title: "Torneo Nacional Juvenil",
    venue: "Puebla Capital",
    time: "16:00",
    home: "Venados Atalaya sub-17",
    away: "Academia Norte",
    score: "",
    cover: "/img/eventos/torneo-juvenil.webp",
    note: "Participación destacada en zona centro."
  },
  {
    id: "amistoso-noviembre",
    date: "2025-11-09",
    title: "Amistoso de Noviembre",
    venue: "Campo Venados Atalaya",
    time: "17:00",
    home: "Venados Atalaya",
    away: "Águilas de Tehuacán",
    score: "",
    cover: "/img/eventos/amistoso-noviembre.webp",
    note: "Amistoso preparatorio antes del cierre de temporada."
  }
];

const hoy = new Date();
const proximos = eventos
  .filter((e) => new Date(e.date + "T00:00:00") >= hoy)
  .sort((a, b) => new Date(a.date) - new Date(b.date))
  .slice(0, 3);
---

<section id="proximos" class="relative py-20 bg-[var(--color-dark)] text-[var(--color-light)] overflow-hidden">
  <div class="text-center mb-12">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-wide">
      PRÓXIMOS <span class="text-[var(--color-secondary)]">ENCUENTROS</span>
    </h2>
    <div class="flex justify-center mt-4 mb-8">
      <div class="w-32 h-[3px] bg-[var(--color-accent)] rounded-full shadow-[0_0_15px_rgba(255,215,0,0.6)]"></div>
    </div>
    <p class="text-light/80 max-w-2xl mx-auto mt-3">
      No te pierdas los próximos compromisos de <strong>Venados Atalaya</strong>.
    </p>
  </div>

  {proximos.length === 0 ? (
    <p class="text-center text-white/70">No hay próximos encuentros programados.</p>
  ) : (
    <div class="max-w-6xl mx-auto px-6 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {proximos.map((e) => (
        <article
          class="va-card rounded-2xl border border-white/10 bg-black/30 overflow-hidden transition-all duration-700 hover:scale-[1.02]"
        >
          <img
            src={e.cover}
            alt={e.title}
            loading="lazy"
            decoding="async"
            class="h-48 w-full object-cover"
          />
          <div class="p-5 flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-bold text-[var(--color-accent)] mb-1">{e.title}</h3>
              <p class="text-sm text-white/70">{e.date} — {e.time}</p>
              <p class="text-white/80 text-sm mt-2">{e.venue}</p>
            </div>
            <div class="mt-4 flex items-center justify-between border-t border-white/10 pt-3">
              <span class="text-sm text-white/70">{e.home}</span>
              <span class="text-xs text-white/60">vs</span>
              <span class="text-sm text-white/70">{e.away}</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  )}
</section>
