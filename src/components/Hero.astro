---
import { withBase } from "@/utils/withBase";
---
<section
  class="relative min-h-[90vh] md:h-[100vh] w-full flex flex-col justify-center items-center text-center overflow-hidden font-title"
>
  <!-- ðŸŽ¥ VIDEO O IMAGEN DE FONDO -->
  <video
    class="absolute inset-0 w-full h-full object-cover brightness-[0.55]"
    autoplay
    muted
    loop
    playsinline
    preload="metadata"
    poster="img/hero-fallback.webp"
    aria-label="Jugadores entrenando en campo de fÃºtbol"
  >
    <source src={withBase("video/hero.mp4")} type="video/mp4" />
  </video>

  <!-- ðŸ–¤ CAPA DEGRADADA -->
  <div
    class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a]/90 via-[#001F1D]/60 to-transparent"
  ></div>

  <!-- âœ¨ CONTENIDO -->
  <div class="relative z-10 px-5 sm:px-6 max-w-[90%] md:max-w-3xl text-light">
    <h1
      class="hero-title text-[clamp(2rem,6vw,3.5rem)] md:text-6xl font-extrabold leading-[1.2] drop-shadow-[0_4px_10px_rgba(0,0,0,0.8)]"
    >
      FORMA <span class="text-secondary">CAMPEONES</span>, NO JUGADORES
    </h1>

    <p
      class="hero-subtitle mt-4 text-[clamp(1rem,3vw,1.25rem)] text-light/90 font-light tracking-wide leading-relaxed"
    >
      Academia formativa de fÃºtbol â€“ TÃ©cnica Â· Disciplina Â· Trabajo en equipo
    </p>

    <!-- ðŸŸ¢ BOTONES CTA -->
    <div
      class="hero-cta mt-8 flex flex-col sm:flex-row justify-center gap-4 w-full sm:w-auto"
    >
      <a
        href="#programas"
        class="btn-primary inline-block px-6 py-3 rounded-lg font-semibold bg-secondary text-dark shadow-md
               hover:bg-secondary/90 hover:scale-105 transition-all duration-300 text-[clamp(0.95rem,3vw,1rem)]"
      >
        Ver Programas
      </a>
      <a
        href="#inscripcion"
        class="btn-secondary inline-block px-6 py-3 rounded-lg font-semibold bg-light text-dark
               hover:bg-white/90 hover:scale-105 transition-all duration-300 text-[clamp(0.95rem,3vw,1rem)]"
      >
        InscrÃ­bete
      </a>
    </div>
  </div>

  <!-- âš½ ICONO INDICADOR DE SCROLL -->
  <div class="absolute bottom-6 z-10 scroll-indicator text-secondary">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-6 h-6 sm:w-7 sm:h-7"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 9l-7 7-7-7"
      />
    </svg>
  </div>

  <!-- ðŸ§  ANIMACIONES -->
  <script is:inline>
    import("https://cdn.jsdelivr.net/npm/motion@11.11.17/+esm").then(
      ({ animate }) => {
        window.addEventListener("DOMContentLoaded", () => {
          animate(
            ".hero-title",
            { opacity: [0, 1], y: [40, 0] },
            { duration: 1 }
          );
          animate(
            ".hero-subtitle",
            { opacity: [0, 1], y: [20, 0] },
            { delay: 0.3, duration: 1 }
          );
          animate(
            ".hero-cta",
            { opacity: [0, 1], scale: [0.95, 1] },
            { delay: 0.6, duration: 0.8 }
          );
          animate(
            ".scroll-indicator",
            { y: [0, 8, 0] },
            { duration: 1.2, repeat: Infinity, easing: "ease-in-out" }
          );
        });
      }
    );
  </script>
</section>
